<tr>
  <td>
    <%= post.id%>
  </td>
  <td>
    <%=  post.overtime_hours %>
  </td>
  <td>
    <%= post.date%>
  </td>
  <td>
    <%= post.user.full_name %>
  </td>
  <td>
    <%= status_label post.status %>
  </td>
  <td>
    <%= link_to   post.rationale.truncate(15), post%>
  </td>
  <td  >
    <% if policy(post).update? %>
      <%= link_to edit_post_path(post), id: "edit_#{post.id}" do %>
        <i class="fa-solid fa-pen"></i>
      <% end %>

      <%= button_to  post_path(post), method: :delete, id: "delete_post_#{post.id}", data: {confirm: 'Are you sure?'}  do %>
        <i class="fa-solid fa-trash text-primary"></i>
      <% end %>
    <% end %>
  </td>
</tr>