<tr>
  <td>
    <%= post.id%>
  </td>
    <td>
    <%=  post.overtime_hours %>
  </td>
  <td>
    <%= post.date%>
  </td>
  <td>
    <%= post.user.full_name %>
  </td>
  <td>
    <%= status_label post.status %>
  </td>
  <td>
    <%= post.rationale.truncate(15)%>
  </td>
  <td  >
    <% if policy(post).edit? %>
      <%= link_to 'Edit', edit_post_path(post), id: "edit_#{post.id}" %>

      <%= button_to 'Delete', post_path(post), method: :delete, id: "delete_post_#{post.id}", data: {confirm: 'Are you sure?'} %>
    <% end %>
  </td>
</tr>