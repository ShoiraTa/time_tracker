<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>
        #
      </th>
      <th>
        Date
      </th>
      <th>
        User
      </th>
      <th>
        Rationale
      </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= post.id%>
        </td>
        <td>
          <%= post.date%>
        </td>
        <td>
          <%= post.user.first_name %>
        </td>
        <td>
          <%= post.rationale.truncate(10)%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
